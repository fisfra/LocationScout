<Window x:Class="LocationScout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:control="clr-namespace:WPFUserControl;assembly=AutoCompleteTextBox"
        xmlns:local="clr-namespace:LocationScout"
        mc:Ignorable="d"
        Title="Location Scout" Height="585" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <TabControl Margin="10,10,10,0" VerticalAlignment="Top" Grid.Row="0">

                <TabItem Header="Location">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Name="LocationContentGrid" Margin="0,0,0,5" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="200"/>
                                <RowDefinition Height="135"/>
                                <RowDefinition Height="135"/>
                            </Grid.RowDefinitions>

                            <GroupBox Header="Subject Location" Margin="10,10,5,5" Grid.Row="0">
                                <Grid Margin="5,5,5,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="215"/>
                                        <ColumnDefinition Width="215"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Label Content="Country" Height="Auto" Grid.Column="0" Grid.Row="0"/>
                                    <TextBox Name="CountryTextBox" Height="18" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"/>

                                    <Label Content="Area" Height="Auto" Grid.Column="0" Grid.Row="1"/>
                                    <TextBox Name="AreaTextBox" Height="18" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"/>

                                    <Label Content="Sub-Area" Height="Auto" Grid.Column="0" Grid.Row="2"/>
                                    <TextBox Name="SubAreaTextBox" Height="18" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>

                                    <Label Content="Location Name" Height="Auto" Grid.Column="0" Grid.Row="3"/>
                                    <TextBox Name="LocationNameTextBox" Height="18" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2"/>

                                    <Label Content="GPS [Lat / Long]" Height="Auto" Grid.Column="0" Grid.Row="4"/>
                                    <TextBox Name="SubjectGPSLat" Height="18" Margin="0,0,5,0" Grid.Column="1" Grid.Row="4"/>
                                    <TextBox Name="SubjectGPSLong" Height="18" Margin="5,0,0,0" Grid.Column="2" Grid.Row="4"/>

                                </Grid>
                            </GroupBox>

                            <GroupBox Header="Shooting Locations (1)" Margin="10,5,5,0" Grid.Row="1">
                                <Grid Margin="5,5,5,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100*"/>
                                        <RowDefinition Height="100*"/>
                                        <RowDefinition Height="100*"/>
                                    </Grid.RowDefinitions>

                                    <Label Content="Parking GPS [Lat / Long]" Height="Auto" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
                                    <TextBox Name="ParkingLocationLat1Textbox"  VerticalAlignment="Center" Height="18" Margin="0,0,5,0" Grid.Column="1" Grid.Row="0"/>
                                    <TextBox Name="ParkingLocationLong1Textbox" VerticalAlignment="Center" Height="18" Margin="5,0,0,0" Grid.Column="2" Grid.Row="0"/>

                                    <Label Content="GPS [Lat / Long]" Height="Auto" VerticalAlignment="Center" Margin="43,0,0,0" Grid.Column="0" Grid.Row="1"/>
                                    <TextBox Name="ShootingLocationLat1_1Textbox"  VerticalAlignment="Center" Height="18" Margin="0,0,5,0" Grid.Column="1" Grid.Row="1"/>
                                    <TextBox Name="ShottingLocationLong1_1Textbox" VerticalAlignment="Center" Height="18" Margin="5,0,0,0" Grid.Column="2" Grid.Row="1"/>
                                    <Label Name="PhotoCount1_1Label" VerticalAlignment="Center" HorizontalAlignment="Center" Content="0" Grid.Column="3" Grid.Row="1"/>
                                    <Button Name="PhotoUpoad1_1Button" Content="IMG" Margin="6,4,4,4" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="4" Grid.Row="1"/>

                                    <Label Content="GPS [Lat / Long]" Height="Auto" VerticalAlignment="Center" Margin="43,0,0,0" Grid.Column="0" Grid.Row="2"/>
                                    <TextBox Name="ShootingLocationLat1_2Textbox"  VerticalAlignment="Center" Height="18" Margin="0,0,5,0" Grid.Column="1" Grid.Row="2"/>
                                    <TextBox Name="ShottingLocationLong1_2Textbox" VerticalAlignment="Center" Height="18" Margin="5,0,0,0" Grid.Column="2" Grid.Row="2"/>
                                    <Label Name="PhotoCount1_2Label" VerticalAlignment="Center" HorizontalAlignment="Center" Content="0" Grid.Column="3" Grid.Row="2"/>
                                    <Button Name="PhotoUpoad1_2Button" Content="IMG" Margin="6,4,4,4" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="4" Grid.Row="2"/>

                                </Grid>
                            </GroupBox>

                            <GroupBox Header="Shooting Locations (2)" Margin="10,5,5,0" Grid.Row="2">
                                <Grid Margin="5,5,5,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100*"/>
                                        <RowDefinition Height="100*"/>
                                        <RowDefinition Height="100*"/>
                                    </Grid.RowDefinitions>

                                    <Label Content="Parking GPS [Lat / Long]" Height="Auto" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
                                    <TextBox Name="ParkingLocationLat2Textbox"  VerticalAlignment="Center" Height="18" Margin="0,0,5,0" Grid.Column="1" Grid.Row="0"/>
                                    <TextBox Name="ParkingLocationLong2Textbox" VerticalAlignment="Center" Height="18" Margin="5,0,0,0" Grid.Column="2" Grid.Row="0"/>

                                    <Label Content="GPS [Lat / Long]" Height="Auto" VerticalAlignment="Center" Margin="43,0,0,0" Grid.Column="0" Grid.Row="1"/>
                                    <TextBox Name="ShootingLocationLat2_1Textbox"  VerticalAlignment="Center" Height="18" Margin="0,0,5,0" Grid.Column="1" Grid.Row="1"/>
                                    <TextBox Name="ShottingLocationLong2_1Textbox" VerticalAlignment="Center" Height="18" Margin="5,0,0,0" Grid.Column="2" Grid.Row="1"/>
                                    <Label Name="PhotoCount2_1Label" VerticalAlignment="Center" HorizontalAlignment="Center" Content="0" Grid.Column="3" Grid.Row="1"/>
                                    <Button Name="PhotoUpoad2_1Button" Content="IMG" Margin="6,4,4,4" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="4" Grid.Row="1"/>

                                    <Label Content="GPS [Lat / Long]" Height="Auto" VerticalAlignment="Center" Margin="43,0,0,0" Grid.Column="0" Grid.Row="2"/>
                                    <TextBox Name="ShootingLocationLat2_2Textbox"  VerticalAlignment="Center" Height="18" Margin="0,0,5,0" Grid.Column="1" Grid.Row="2"/>
                                    <TextBox Name="ShottingLocationLong2_2Textbox" VerticalAlignment="Center" Height="18" Margin="5,0,0,0" Grid.Column="2" Grid.Row="2"/>
                                    <Label Name="PhotoCount2_2Label" VerticalAlignment="Center" HorizontalAlignment="Center" Content="0" Grid.Column="3" Grid.Row="2"/>
                                    <Button Name="PhotoUpoad2_2Button" Content="IMG" Margin="6,4,4,4" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="4" Grid.Row="2"/>

                                </Grid>
                            </GroupBox>
                        </Grid>

                        <Grid Name="LocationButtonGrid" Margin="5,5,5,10" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem Header="Settings">

                    <Grid Background="#FFE5E5E5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>

                            <GroupBox Header="Maintan Countries" Margin="5,10,5,5" Grid.Column="0">
                                <Grid Margin="5,5,5,5" Grid.Column="0">

                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Content="Countries" Grid.Column="0" Grid.Row="0"/>
                                    <control:AutoCompleteTextBox x:Name="CountriesACTB"  AutoCompleteWidth="410" AutoCompleteTextBoxHeight="18" KeyboardNavigation.TabIndex="0" Grid.Column="1" Grid.Row="0" 
                                                                 HorizontalAlignment="Left" Margin="5,5,5,0" Grid.RowSpan="3" Panel.ZIndex="1000"/>
                                    <!-- RowSpan as workaround - otherwise dropdown list is cut off -->

                                    <Label Content="Areas" Grid.Column="0" Grid.Row="1"/>
                                    <control:AutoCompleteTextBox x:Name="AreasACTB"  AutoCompleteWidth="410" AutoCompleteTextBoxHeight="18" KeyboardNavigation.TabIndex="1" Grid.Column="1" Grid.Row="1" 
                                                                 HorizontalAlignment="Left" Margin="5,5,5,5" Grid.RowSpan="3" Panel.ZIndex="900"/>
                                    <!-- RowSpan as workaround - otherwise dropdown list is cut off -->

                                    <Label Content="Sub-Areas" Grid.Column="0" Grid.Row="2"/>
                                    <control:AutoCompleteTextBox x:Name="SubAreasACTB"  AutoCompleteWidth="410" AutoCompleteTextBoxHeight="18" KeyboardNavigation.TabIndex="2" Grid.Column="2" Grid.Row="2" 
                                                                 HorizontalAlignment="Left" Margin="5,5,5,5" Grid.RowSpan="3" Panel.ZIndex="800"/>
                                    <!-- RowSpan as workaround - otherwise dropdown list is cut off -->
                                </Grid>
                            </GroupBox>

                            <Grid Grid.Column="1" Grid.RowSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Button Content="Add" Grid.Row="0" Width="100" Height="25" Margin="5,20,5,5" Click="Button_Click"/>
                            </Grid>

                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>

            <Button Content="Close" HorizontalAlignment="Right" Width="110" Height="25" Grid.Row="1" Margin="0,0,10,0" Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>
